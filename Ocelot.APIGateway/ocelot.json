{
  "Routes": [
    {
      "DownstreamPathTemplate": "/products",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/products",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "ProductService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      // 緩存
      "FileCacheOptions": {
        // 緩存的過期時間
        "TtlSeconds": 5,
        // 緩存區名稱
        "Region": "regionname"
      },
      // 限流
      "RateLimitOptions": {
        // 客戶端的白名單
        "ClientWhitelist": [ "SuperClient" ],
        // 是否限流
        "EnableRateLimiting": true,
        // 限流的單位時間
        "Period": "5s",
        // 客戶端達到請求上限多少秒可以重試
        "PeriodTimespan": 2,
        // 客戶端在定義的時間內可以發出的最大請求數
        "Limit": 1
      },
      // 超時/熔斷
      "QoSOptions": {
        // 發生錯誤的次數
        "ExceptionsAllowedBeforeBreaking": 3,
        // 熔斷時間
        "DurationOfBreak": 1000,
        // 超時時間
        "TimeoutValue": 5000
      }
    },
    {
      "DownstreamPathTemplate": "/orders",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/orders",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "OrderService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      // 緩存
      "FileCacheOptions": {
        // 緩存的過期時間
        "TtlSeconds": 5,
        // 緩存區名稱
        "Region": "regionname"
      },
      // 限流
      "RateLimitOptions": {
        // 客戶端的白名單
        "ClientWhitelist": [ "SuperClient" ],
        // 是否限流
        "EnableRateLimiting": true,
        // 限流的單位時間
        "Period": "5s",
        // 客戶端達到請求上限多少秒可以重試
        "PeriodTimespan": 2,
        // 客戶端在定義的時間內可以發出的最大請求數
        "Limit": 2
      },
      // 超時/熔斷
      "QoSOptions": {
        // 發生錯誤的次數
        "ExceptionsAllowedBeforeBreaking": 3,
        // 熔斷時間
        "DurationOfBreak": 1000,
        // 超時時間
        "TimeoutValue": 5000
      }
    },
    {
      "DownstreamPathTemplate": "/orders/{url}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/orders/{url}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "ServiceName": "OrderService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      // 緩存
      "FileCacheOptions": {
        // 緩存的過期時間
        "TtlSeconds": 5,
        // 緩存區名稱
        "Region": "regionname"
      },
      // 限流
      "RateLimitOptions": {
        // 客戶端的白名單
        "ClientWhitelist": [ "SuperClient" ],
        // 是否限流
        "EnableRateLimiting": true,
        // 限流的單位時間
        "Period": "5s",
        // 客戶端達到請求上限多少秒可以重試
        "PeriodTimespan": 2,
        // 客戶端在定義的時間內可以發出的最大請求數
        "Limit": 2
      },
      // 超時/熔斷
      "QoSOptions": {
        // 發生錯誤的次數
        "ExceptionsAllowedBeforeBreaking": 3,
        // 熔斷時間
        "DurationOfBreak": 1000,
        // 超時時間
        "TimeoutValue": 5000
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9070",
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    },
    // 限流
    "RateLimitOptions": {
      // 是否禁用X-Rate-Limit和Retry-After標頭（請求達到上限時，response header中的限制數和多少秒後能重試）
      "DisableRateLimitHeaders": false,
      // 請求達到上限時回傳給客戶端的訊息
      "QuotaExceededMessage": "too many requests...",
      // 請求達到上限時回傳給客戶端的HTTP狀態代碼
      "HttpStatusCode": 999,
      // 允許自訂用於標識客戶端的標頭
      "ClientIdHeader": "Test"
    }
  }
}